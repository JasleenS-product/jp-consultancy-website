{% extends "layouts/base.njk" %}

{% block content %}
<!-- Hero Section with Carousel and Floating Stats -->
<section class="hero-section">
  <div class="hero-carousel">
    <!-- Slide 1 -->
    <div class="hero-slide active" style="background-image: url('/assets/images/Hero.jpg');">
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1 class="hero-title">Investing in the Future of Healthcare in India</h1>
        <div class="hero-tagline">Your trusted partner in healthcare consultancy, hospital planning, and professional excellence across India</div>
        <div class="hero-buttons">
          <a href="/service-details/hospital-planning" class="btn btn-primary">Discover More</a>
          <a href="/projects.html" class="btn btn-outline">View Projects</a>
        </div>
      </div>
    </div>
    <!-- Slide 2 -->
    <div class="hero-slide" style="background-image: url('/assets/images/hero2.jpg');">
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1 class="hero-title">Designing World-Class Healthcare Facilities</h1>
        <div class="hero-tagline">We collaborate with healthcare leaders to plan, design, and equip hospitals through strategic design, hospital architecture services, and affordable hospital planning solutions</div>
        <div class="hero-buttons">
          <a href="/service-details/equipment" class="btn btn-primary">Discover More</a>
          <a href="/projects.html" class="btn btn-outline">View Projects</a>
        </div>
      </div>
    </div>
    <!-- Slide 3 -->
    <div class="hero-slide" style="background-image: url('/assets/images/hero3.jpg');">
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1 class="hero-title">Visionary Design. Strategic Procurement. Lasting Impact.</h1>
        <div class="hero-tagline">Transforming healthcare spaces with expert hospital consultancy, equipment planning, and end-to-end lifecycle management of medical devices</div>
        <div class="hero-buttons">
          <a href="/service-details/consultancy" class="btn btn-primary">Discover More</a>
          <a href="/projects.html" class="btn btn-outline">View Projects</a>
        </div>
      </div>
    </div>
    <!-- Stats Overlay (always visible, below hero content) -->
    <div class="hero-stats-overlay">
      <div class="stat"><span class="stat-number">15+</span><span class="stat-label">Years in the Industry</span></div>
      <div class="stat"><span class="stat-number">50+</span><span class="stat-label">Organizations Transformed</span></div>
      <div class="stat"><span class="stat-number">100%</span><span class="stat-label">Client Satisfaction Rate</span></div>
      <div class="stat"><span class="stat-number">Quality</span><span class="stat-label">Excellence delivered in every project</span></div>
    </div>
  </div>
  <div class="carousel-indicators">
    <span class="indicator active"></span>
    <span class="indicator"></span>
    <span class="indicator"></span>
  </div>
</section>

<!-- Visual Divider/Background Play After Services -->
<div class="section-divider">
  <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="divider-svg">
    <defs>
      <linearGradient id="heroCurveGradient" x1="0" y1="0" x2="0" y2="100" gradientUnits="userSpaceOnUse">
        <stop offset="0%" stop-color="#1F5FFF" stop-opacity="0.95"/>
        <stop offset="100%" stop-color="#0F4CDB" stop-opacity="0.7"/>
      </linearGradient>
    </defs>
    <path d="M0,0 C480,100 960,0 1440,100 L1440,100 L0,100 Z" fill="url(#heroCurveGradient)"/>
  </svg>
</div>

<!-- Modern Services Section -->
<section id="services" class="services-modern-section">
  <div class="services-bg-blur"></div>
  <div class="container">
    <div class="services-header">
      <h2>{{ services_hero.title }}</h2>
      <p>{{ services_hero.subtitle }}</p>
    </div>
    <div class="services-modern-grid">
      {% for service in services %}
      <div class="service-modern-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
        <div class="service-modern-icon">
          <div class="numbered-badge">{{ loop.index }}</div>
        </div>
        <h3>{{ service.title }}</h3>
        <p>{{ service.description }}</p>
        <a href="{{ service.link }}" class="service-modern-btn">Learn More &rarr;</a>
      </div>
      {% endfor %}
    </div>
  </div>
  <!-- SVG Icon Definitions (Phosphor Icons) -->
  <svg style="display:none;">
    <symbol id="ph-shield-check" viewBox="0 0 256 256"><path d="M128 24L40 56v58c0 80 80 118 80 118s80-38 80-118V56z"/><polyline points="104 128 128 152 176 104"/></symbol>
    <symbol id="ph-buildings" viewBox="0 0 256 256"><rect x="40" y="96" width="176" height="120" rx="8"/><rect x="88" y="56" width="80" height="40" rx="8"/><rect x="120" y="16" width="16" height="40" rx="8"/></symbol>
    <symbol id="ph-briefcase" viewBox="0 0 256 256"><rect x="32" y="72" width="192" height="144" rx="8"/><rect x="32" y="72" width="192" height="32" rx="8"/><path d="M80 72V56a8 8 0 0 1 8-8h80a8 8 0 0 1 8 8v16"/></symbol>
    <symbol id="ph-airplane-tilt" viewBox="0 0 256 256"><path d="M224 128L32 128M128 32L128 224"/><polyline points="96 96 128 128 160 96"/></symbol>
    <symbol id="ph-graduation-cap" viewBox="0 0 256 256"><path d="M32 128L128 64l96 64-96 64z"/><path d="M32 128v48a16 16 0 0 0 16 16h160a16 16 0 0 0 16-16v-48"/></symbol>
    <symbol id="ph-stethoscope" viewBox="0 0 256 256"><circle cx="68" cy="188" r="28"/><circle cx="188" cy="188" r="28"/><path d="M68 160V56a12 12 0 0 1 12-12h96a12 12 0 0 1 12 12v104"/></symbol>
  </svg>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-section">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2>Why Choose Us</h2>
      <p>Discover what sets JP Consultancy apart in the healthcare consulting industry.</p>
    </div>
    <div class="why-choose-grid">
      <div class="why-choose-card" data-aos="fade-up">
        <div class="why-choose-icon">
          <svg width="48" height="48" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="24" cy="24" r="20"/><polyline points="16 24 22 30 32 18"/></svg>
        </div>
        <h3>Proven Results</h3>
        <p>We deliver measurable improvements in efficiency, quality, and patient satisfaction.</p>
      </div>
      <div class="why-choose-card" data-aos="fade-up" data-aos-delay="100">
        <div class="why-choose-icon">
          <svg width="48" height="48" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="12" y="12" width="24" height="24" rx="6"/><path d="M24 18v12M18 24h12"/></svg>
        </div>
        <h3>Client-Centric Approach</h3>
        <p>Our solutions are tailored to your unique needs and organizational goals.</p>
      </div>
      <div class="why-choose-card" data-aos="fade-up" data-aos-delay="200">
        <div class="why-choose-icon">
          <svg width="48" height="48" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="24" cy="24" r="20"/>
            <path d="M24 8v16l8 8"/>
            <path d="M12 24h24"/>
            <path d="M24 12v24"/>
          </svg>
        </div>
        <h3>Decades of Experience</h3>
        <p>Our team brings decades of combined experience in healthcare consulting.</p>
      </div>
      <div class="why-choose-card" data-aos="fade-up" data-aos-delay="300">
        <div class="why-choose-icon">
          <svg width="48" height="48" fill="none" stroke="#2563EB" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="8" y="8" width="32" height="32" rx="8"/><path d="M16 24l8 8 8-8"/></svg>
        </div>
        <h3>End-to-End Solutions</h3>
        <p>From planning to implementation, we support you at every stage of your journey.</p>
      </div>
    </div>
  </div>
</section>

<!-- Modern Projects Section with Dynamic Data -->
<section id="projects" class="projects-section-v2">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2>{{ projects_hero.title }}</h2>
      <p>{{ projects_hero.subtitle }}</p>
    </div>
    <div class="projects-scroll-container">
      <div class="projects-grid-v2">
        {% for project in projects %}
        <div class="project-card-v2" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
          <div class="project-image-wrapper-v2">
              <img src="{{ project.image }}" alt="{{ project.title }}" class="project-image-bg-v2">
          </div>
          <div class="project-content-v2">
              <span class="project-catchy-v2">{{ project.category }}</span>
              <h3>{{ project.title }}</h3>
              <p class="project-location-v2">{{ project.location }}</p>
              <p class="project-description-v2">{{ project.description }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="projects-cta-wrapper" data-aos="fade-up">
      <a href="/projects.html" class="btn btn-primary">View All Projects</a>
    </div>
  </div>
</section>

<!-- Approach Section with Image Right-Aligned -->
<section class="approach-section">
  <div class="container approach-flex">
    <div class="approach-text">
      <div class="section-header" data-aos="fade-up">
        <h2>{{ approach.title }}</h2>
        <p>{{ approach.subtitle }}</p>
      </div>
      <div class="approach-timeline">
        {% for step in approach.steps %}
        <div class="timeline-item" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
          <div class="timeline-number">{{ step.number }}</div>
          <div class="timeline-content">
            <h3>{{ step.title }}</h3>
            <p>{{ step.description }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <div class="approach-image" data-aos="fade-left">
      <img src="/assets/images/Approach.jpg" alt="Our Approach" />
    </div>
  </div>
</section>

<!-- Our Expert Team Section -->
<section class="team-section">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2>Our Expert Team</h2>
      <p>Meet the professionals who drive excellence in healthcare consulting</p>
    </div>
    <div class="team-carousel-container">
      <div class="team-carousel">
        <div class="team-card" data-aos="fade-up" data-aos-delay="100">
          <h3>Dr. Vijayalakshmi Pandey</h3>
          <p class="team-title">MANAGING DIRECTOR</p>
          <p>Extensive clinical experience as a physician with a diploma in Hospital & Healthcare Management. Oversees consultancy operations with comprehensive knowledge of hospital processes and accreditation requirements.</p>
        </div>
        <div class="team-card" data-aos="fade-up" data-aos-delay="200">
          <h3>Dr. Ramkishor Pandey</h3>
          <p class="team-title">ADVISOR</p>
          <p>Seasoned expert in hospital operations and quality systems with over 15 years of hands-on experience in clinical governance, accreditation, and strategic hospital management.</p>
        </div>
        <div class="team-card" data-aos="fade-up" data-aos-delay="300">
          <h3>Mr. Rahul Pandey</h3>
          <p class="team-title">HEAD OF OPERATIONS</p>
          <p>Graduate in Commerce with extensive business experience. Manages business operations and client relationships, ensuring smooth delivery of consultancy services.</p>
        </div>
        <div class="team-card" data-aos="fade-up" data-aos-delay="400">
          <h3>Dr. Priya Sharma</h3>
          <p class="team-title">QUALITY ASSURANCE SPECIALIST</p>
          <p>Expert in NABH, JCI standards and quality management implementation with extensive experience in healthcare accreditation processes.</p>
        </div>
        <div class="team-card" data-aos="fade-up" data-aos-delay="500">
          <h3>Mr. Amit Kumar</h3>
          <p class="team-title">HOSPITAL PLANNING CONSULTANT</p>
          <p>Specialized in healthcare facility design and architectural planning with comprehensive understanding of hospital infrastructure requirements.</p>
        </div>
        <div class="team-card" data-aos="fade-up" data-aos-delay="600">
          <h3>Dr. Meera Patel</h3>
          <p class="team-title">MEDICAL TOURISM COORDINATOR</p>
          <p>Expert in international patient services and medical tourism strategies with focus on creating seamless patient experiences.</p>
        </div>
      </div>
      <div class="team-nav-arrows">
        <div class="team-nav-arrow prev" onclick="scrollTeamCarousel('left')">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </div>
        <div class="team-nav-arrow next" onclick="scrollTeamCarousel('right')">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    </div>
    <div class="text-center" style="margin-top: 3rem;">
      <a href="/about" class="btn btn-primary">Know More</a>
    </div>
  </div>
</section>

<!-- Team Section Curve SVG -->
<svg class="team-curve-svg" viewBox="0 0 1440 70" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="teamCurveGradient" x1="0" y1="0" x2="0" y2="70" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#1F5FFF" stop-opacity="0.95"/>
      <stop offset="100%" stop-color="#0F4CDB" stop-opacity="0.7"/>
    </linearGradient>
  </defs>
  <path d="M0,0 C480,70 960,0 1440,70 L1440,70 L0,70 Z" fill="url(#teamCurveGradient)"/>
</svg>

<!-- Testimonials Section -->
<section class="testimonials-section">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2>{{ testimonials.title }}</h2>
      <p>{{ testimonials.subtitle }}</p>
    </div>
    <div class="testimonials-carousel">
      {% for testimonial in testimonials.items %}
      <div class="testimonial-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
        <div class="testimonial-quote">
          <p>"{{ testimonial.quote }}"</p>
        </div>
        <div class="testimonial-author">
          <h4>{{ testimonial.author }}</h4>
          <p>{{ testimonial.position }}</p>
          <p class="organization">{{ testimonial.organization }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Bold Final Banner Section -->
<section class="final-banner">
  <div class="final-banner-content">
    <h2>Ready to Transform Your Healthcare Facility?</h2>
    <div class="final-banner-underline"></div>
    <p>Let's discuss how we can help you achieve excellence in healthcare delivery.</p>
    <a href="/contact" class="btn btn-accent btn-lg">Get Started Today</a>
  </div>
</section>
{% endblock %} 

